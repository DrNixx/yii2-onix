  "description": "Helpers and Extensions for Yii2",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Nick Panteleeff",
      "email": "drnix@chess-online.com"
    }
  ],
  "require": {
    "php": ">=5.6.0",
    "ext-json": "*",
    "ext-curl": "*",
    "ext-mongodb": "*",
    "yiisoft/yii2": "~2.0.6"
  },
  "require-dev": {
    "yiisoft/yii2-faker": "~2.0.0",

    "codeception/base": "^3.0.0",
    "codeception/verify": "~0.5.0",
